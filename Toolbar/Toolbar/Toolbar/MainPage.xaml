<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Toolbar"
             x:Class="Toolbar.MainPage">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Primary" Order="Primary" Priority="0" Activated="Toolbar_Click">
            <ToolbarItem.Icon>
                <OnPlatform x:TypeArguments="FileImageSource" 
                WinPhone="Assets/LockScreenLogo.scale-100.png" />
            </ToolbarItem.Icon>
        </ToolbarItem>
        <ToolbarItem Text="Secondary" Order="Secondary" Priority="1" Activated="Toolbar_Click"/>
    </ContentPage.ToolbarItems>

</ContentPage>
    